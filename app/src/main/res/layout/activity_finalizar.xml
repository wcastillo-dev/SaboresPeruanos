<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pe.edu.upc.saboresperuanos_v12.activities.ActivityFinalizar">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gracias por su compra"
            android:gravity="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:id="@+id/imgEspera"
            android:src="@drawable/cancha_serrana"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estamos enviando tu pedido"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>
